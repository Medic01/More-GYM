<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="409dp"
        android:layout_height="138dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="#202024"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_weight="1"
                android:paddingStart="50dp"
                android:paddingTop="38dp"
                android:paddingEnd="50dp"
                android:paddingBottom="10dp"
                android:textColor="#E1E1E6"
                android:textStyle="bold"
                tools:text="Pozdrav," />

            <TextView
                android:id="@+id/user_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="120dp"
                android:paddingTop="0dp"
                android:paddingEnd="20dp"
                android:text="Korisnik1234"
                android:textColor="#E1E1E6" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#202024"
            app:srcCompat="@drawable/logout" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintTop_toBottomOf="@+id/header"
        tools:layout_editor_absoluteX="0dp">

        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">


                <RelativeLayout
                    android:id="@+id/button_biceps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/biceps_view"
                        android:layout_width="96dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/_bg__button_ek3_shape" />

                    <TextView
                        android:id="@+id/biceps_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="22.2dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginStart="25.5dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="0dp"
                        android:gravity="center"
                        android:text="@string/biceps_string"
                        android:textAllCaps="true"
                        android:textColor="@color/filtro_ek1_color"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button_prsa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/prsa_view"
                        android:layout_width="96dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/_bg__button_ek3_shape" />

                    <TextView
                        android:id="@+id/prsa_text"
                        android:layout_width="wrap_content"
                        android:layout_height="22.2dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="25.5dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/prsa_string"
                        android:textAllCaps="true"
                        android:textColor="@color/filtro_ek1_color"
                        android:textSize="12sp" />



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button_triceps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/triceps_view"
                        android:layout_width="96dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/_bg__button_ek3_shape" />

                    <TextView
                        android:id="@+id/triceps_text"
                        android:layout_width="wrap_content"
                        android:layout_height="22.2dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="25.5dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/triceps_string"
                        android:textAllCaps="true"
                        android:textColor="@color/filtro_ek1_color"
                        android:textSize="12sp" />



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button_leda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/leda_view"
                        android:layout_width="96dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/_bg__button_ek3_shape" />

                    <TextView
                        android:id="@+id/leda_text"
                        android:layout_width="47.2dp"
                        android:layout_height="22.2dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="25.5dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/leđa_string"
                        android:textAllCaps="true"
                        android:textColor="@color/filtro_ek1_color"
                        android:textSize="12sp" />



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button_noge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/noge_view"
                        android:layout_width="96dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/_bg__button_ek3_shape" />

                    <TextView
                        android:id="@+id/noge_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="22.2dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="25.5dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/noge_string"
                        android:textAllCaps="true"
                        android:textColor="@color/filtro_ek1_color"
                        android:textSize="12sp" />



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/button_stomak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp">

                    <View
                        android:id="@+id/stomak_view"
                        android:layout_width="96dp"
                        android:layout_height="43dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/_bg__button_ek3_shape" />

                    <TextView
                        android:id="@+id/stomak_text"
                        android:layout_width="wrap_content"
                        android:layout_height="22.2dp"
                        android:layout_gravity="center_horizontal|center"
                        android:layout_marginLeft="25.5dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="@string/stomak_string"
                        android:textAllCaps="true"
                        android:textColor="@color/filtro_ek1_color"
                        android:textSize="12sp" />



                </RelativeLayout>


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Vježbe"
            android:textColor="#E1E1E6"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="#29292E"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="16dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/textViewVjezba1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            tools:text="@string/vjezba1" />

                        <TextView
                            android:id="@+id/textViewOpis1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#C4C4CC"
                            tools:text="@string/ponavljaja1" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#29292E"
                        android:paddingRight="10dp"
                        app:srcCompat="@drawable/next" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="83dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="#29292E"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="16dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/textViewVjezba2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#FFFFFF"
                            tools:text="@string/vjezba2" />

                        <TextView
                            android:id="@+id/textViewOpis2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#C4C4CC"
                            tools:text="@string/ponavljaja2" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#29292E"
                        android:paddingRight="10dp"
                        app:srcCompat="@drawable/next" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="409dp"
        android:layout_height="100dp"
        android:background="#202024"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/home_green" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/refresh" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:src="@drawable/account" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>